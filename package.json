{
  "name": "frontend-example",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "infra:up": "docker-compose up -d",
    "infra:down": "docker-compose down",
    "start": "node ./src/server/app.js",
    "start:dev": "nodemon --exec npm run build:dev",
    "build": "webpack --config ./config/webpack.config.js",
    "build:dev": "webpack --config ./config/webpack.config.js && node ./src/server/app.js",
    "test": "jest --forceExit"
  },
  "babel": {
    "presets": [
      "react",
      "env",
      "stage-3"
    ]
  },
  "keywords": [
    "react",
    "express",
    "node",
    "webpack"
  ],
  "author": "Paul van Woensel",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.1",
    "babel-preset-stage-3": "^6.24.1",
    "body-parser": "^1.19.0",
    "config": "^3.2.2",
    "express": "^4.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.17.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.4.2",
    "css-loader": "^3.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-junit": "^7.0.0",
    "morgan": "^1.8.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.23.1",
    "supertest": "^4.0.2",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "jest": {
    "collectCoverage": true,
    "projects": [
      "<rootDir>/src/client/jest.json",
      "<rootDir>/src/server/jest.json"
    ]
  },
  "nodemonConfig": {
    "ext": "js, jsx, scss, css, json",
    "ignore": [
      "www/",
      "*.test.js"
    ]
  }
}
